<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/walpaper"
    android:layout_height="match_parent"
    tools:context=".view.Appliance_4">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:orientation="vertical"
                android:theme="@style/Widget.AppCompat.Toolbar"
                android:weightSum="1">

                <androidx.appcompat.widget.Toolbar

                    android:id="@+id/tb_appliance1"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/colorPrimary"
                    android:minHeight="?attr/actionBarSize"
                    android:theme="?attr/actionBarTheme"
                    app:titleTextColor="#ffffff" />

            </com.google.android.material.appbar.AppBarLayout>


            <LinearLayout
                android:id="@+id/ll_header"
                android:layout_width="match_parent"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_below="@+id/appBarLayout"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:textColor="@color/primary_light"
                    android:fontFamily="@font/aclonica"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:text="Please Select Appliances that you use in between 10 P.M to 5 A.M"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/body1"
                android:layout_below="@id/ll_header"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvTime22To5"
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:fadeScrollbars="true"
                    android:foregroundGravity="center_horizontal|center"
                    tools:itemCount="2"
                    tools:listitem="@layout/layout_for_appliance_time">

                </androidx.recyclerview.widget.RecyclerView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_btn"
                android:layout_width="match_parent"
                android:layout_marginTop="32dp"
                android:paddingBottom="12dp"
                android:layout_below="@+id/body2"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_save"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/aclonica"
                    android:background="@drawable/button_click"
                    android:padding="12dp"
                    android:onClick="Save"
                    android:text="Save" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>